@media screen and (min-width: 769px)
	.profile
		&-photo
			float left
			margin 1em 1em 3em 2em
			max-width 250px
		&-person
			float right
			font-size 330%
			text-align right
			width 350px
		&-job
			clear right
			font-size 260%
			text-align right
		&-contactInfo
			width 50%
			float left
		&-social
			width 50% right
			.icon
				margin 6px 25px

@media screen and (min-width: 992px)
	.theContainer
		max-width 960px
	.profile
		&-person
			font-size 450%
			width 600px
		&-description
			float left
			width 48%
		&-contactInfo
			float right
			width 48%
		&-social
			float right
			width 48%
			.icon
				margin 0px 40px
				font-size 140%

